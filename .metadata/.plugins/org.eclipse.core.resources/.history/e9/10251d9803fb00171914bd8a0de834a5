package edu.pitt.helloanimals;

public class Bird extends Animal {

	private String type;
	
	public Bird(String age, String color, String type, int weight, int minimumWeight) {
		super.Animal(age, color, type, weight, minimumWeight);
	}
	
	public int fly() {
		return (getWeight()-2);
	}
}
